generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//////////////////////
// ENUMS
//////////////////////

enum Role {
  USER
  ADMIN
}

//////////////////////
// USER (NextAuth base)
//////////////////////

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String? @unique
  image     String?
  role      Role    @default(USER)
  createdAt DateTime @default(now())
  userSources   UserSource[]
  library       LibraryManga[]
  reading       ReadingProgress[]
}

//////////////////////
// SOURCE (GLOBAL)
//////////////////////

model Source {
  id        String   @id @default(cuid())
  name      String
  adapterId String   @unique
  baseUrl   String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relations
  users     UserSource[]
  library   LibraryManga[]
  reading   ReadingProgress[]
}

//////////////////////
// USER <-> SOURCE
//////////////////////

model UserSource {
  id        String   @id @default(cuid())
  userId    String
  sourceId  String
  enabled   Boolean  @default(true)
  addedAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  source Source @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@unique([userId, sourceId])
}

//////////////////////
// LIBRARY (BOOKMARK)
//////////////////////

model LibraryManga {
  id              String   @id @default(cuid())
  userId          String
  sourceId        String
  externalMangaId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  source Source @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@unique([userId, sourceId, externalMangaId])
}

//////////////////////
// READING PROGRESS
//////////////////////

model ReadingProgress {
  id                String   @id @default(cuid())
  userId            String
  sourceId          String
  externalMangaId   String
  externalChapterId String
  lastPage          Int?
  updatedAt         DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  source Source @relation(fields: [sourceId], references: [id], onDelete: Cascade)

  @@unique([userId, sourceId, externalMangaId, externalChapterId])
}