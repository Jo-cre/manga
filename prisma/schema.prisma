generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//////////////////////
// ENUMS
//////////////////////

enum Role {
  USER
  ADMIN
}

//////////////////////
// USER (NextAuth base)
//////////////////////

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String? @unique
  image     String?
  banner    String?  @default("")
  role      Role    @default(USER)
  createdAt DateTime @default(now())
  library       Library[]
  reading       ReadingProgress[]
}

//////////////////////
// LIBRARY (BOOKMARK)
//////////////////////

model Library {
  userId  String
  mangaId String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, mangaId])
}

//////////////////////
// READING PROGRESS
//////////////////////

model ReadingProgress {
  userId     String
  mangaId    String
  chapterNum Int   @default(0)
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, mangaId])
}